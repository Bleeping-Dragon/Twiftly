<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/homePage">

    <fragment
        android:id="@+id/homePage"
        android:name="com.bleepingdragon.twiftly.HomePage"
        android:label="fragment_home_page"
        tools:layout="@layout/fragment_home_page" >
        <action
            android:id="@+id/action_homePage_to_workingHoursPage"
            app:destination="@id/workingHoursPage"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_homePage_to_compassPage"
            app:destination="@id/compassPage"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_homePage_to_headsTailsPage"
            app:destination="@id/headsTailsPage"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_homePage_to_flashlightPage"
            app:destination="@id/flashlightPage"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_homePage_to_mapPage"
            app:destination="@id/mapPage"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

        <action
            android:id="@+id/action_homePage_to_plantsCarePage"
            app:destination="@id/plantsCarePage"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/workingHoursPage"
        android:name="com.bleepingdragon.twiftly.WorkingHoursPage"
        android:label="fragment_working_hours_page"
        tools:layout="@layout/fragment_working_hours_page" />
    <fragment
        android:id="@+id/compassPage"
        android:name="com.bleepingdragon.twiftly.CompassPage"
        android:label="fragment_compass_page"
        tools:layout="@layout/fragment_compass_page" />
    <fragment
        android:id="@+id/headsTailsPage"
        android:name="com.bleepingdragon.twiftly.HeadsTailsPage"
        android:label="fragment_heads_tails_page"
        tools:layout="@layout/fragment_heads_tails_page" />
    <fragment
        android:id="@+id/flashlightPage"
        android:name="com.bleepingdragon.twiftly.FlashlightPage"
        android:label="fragment_flashlight_page"
        tools:layout="@layout/fragment_flashlight_page" />
    <fragment
        android:id="@+id/mapPage"
        android:name="com.bleepingdragon.twiftly.MapPage"
        android:label="fragment_map_page"
        tools:layout="@layout/fragment_map_page" />

    <fragment
        android:id="@+id/plantsCarePage"
        android:name="com.bleepingdragon.twiftly.PlantsCarePage"
        android:label="fragment_plants_care_page"
        tools:layout="@layout/fragment_plants_care_page" />
</navigation>