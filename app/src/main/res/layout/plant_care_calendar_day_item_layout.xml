<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="56dp"
    android:layout_height="84dp"
    android:padding="6dp">

    <!-- Background circle placed first so it's underneath -->
    <ImageView
        android:id="@+id/backgroundCircleImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        app:srcCompat="@drawable/plant_care_day_circle" />

    <!-- Day text centered horizontally near the top -->
    <TextView
        android:id="@+id/dayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="12dp"
        android:text="99"
        android:textSize="18dp"
        android:textAlignment="center" />

    <!-- Month label centered horizontally at bottom -->
    <TextView
        android:id="@+id/monthTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="44dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="MONTH"
        android:textAlignment="center"
        android:textSize="14dp" />
</FrameLayout>