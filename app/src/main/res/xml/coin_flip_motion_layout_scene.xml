<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/headsImageView"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/tailsImageView"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/end"></ConstraintSet>

    <ConstraintSet android:id="@+id/show_heads"></ConstraintSet>
    <ConstraintSet android:id="@+id/show_tails"></ConstraintSet>

    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end"
        motion:duration="1000"
        motion:autoTransition="none" >
        <KeyFrameSet >
            <KeyAttribute
                motion:motionTarget="@+id/headsImageView"
                motion:framePosition="0"
                android:rotationX="0" />
            <KeyAttribute
                motion:motionTarget="@+id/headsImageView"
                motion:framePosition="25"
                android:rotationX="90" />
            <KeyAttribute
                motion:motionTarget="@+id/headsImageView"
                motion:framePosition="50"
                android:rotationX="180" />
            <KeyAttribute
                motion:motionTarget="@+id/headsImageView"
                motion:framePosition="75"
                android:rotationX="270" />
            <KeyAttribute
                motion:motionTarget="@+id/headsImageView"
                motion:framePosition="100"
                android:rotationX="360" />
            <KeyAttribute
                motion:motionTarget="@+id/tailsImageView"
                motion:framePosition="0"
                android:rotationX="0" />
            <KeyAttribute
                motion:motionTarget="@+id/tailsImageView"
                motion:framePosition="25"
                android:rotationX="90" />
            <KeyAttribute
                motion:motionTarget="@+id/tailsImageView"
                motion:framePosition="50"
                android:rotationX="180" />
            <KeyAttribute
                motion:motionTarget="@+id/tailsImageView"
                motion:framePosition="75"
                android:rotationX="270" />
            <KeyAttribute
                motion:motionTarget="@+id/tailsImageView"
                motion:framePosition="100"
                android:rotationX="360" />
            <KeyAttribute
                motion:motionTarget="@+id/headsImageView"
                motion:framePosition="0"
                android:alpha="1" />
            <KeyAttribute
                motion:motionTarget="@+id/headsImageView"
                motion:framePosition="25"
                android:alpha="0" />
            <KeyAttribute
                motion:motionTarget="@+id/headsImageView"
                motion:framePosition="50"
                android:alpha="0" />
            <KeyAttribute
                motion:motionTarget="@+id/headsImageView"
                motion:framePosition="75"
                android:alpha="0" />
            <KeyAttribute
                motion:motionTarget="@+id/headsImageView"
                motion:framePosition="100"
                android:alpha="1" />
            <KeyAttribute
                motion:motionTarget="@+id/tailsImageView"
                motion:framePosition="0"
                android:alpha="0" />
            <KeyAttribute
                motion:motionTarget="@+id/tailsImageView"
                motion:framePosition="25"
                android:alpha="0" />
            <KeyAttribute
                motion:motionTarget="@+id/tailsImageView"
                motion:framePosition="50"
                android:alpha="1" />
            <KeyAttribute
                motion:motionTarget="@+id/tailsImageView"
                motion:framePosition="75"
                android:alpha="0" />
            <KeyAttribute
                motion:motionTarget="@+id/tailsImageView"
                motion:framePosition="100"
                android:alpha="0" />
        </KeyFrameSet>
    </Transition>
    <Transition
        motion:constraintSetStart="@+id/end"
        motion:constraintSetEnd="@+id/show_heads" />
    <Transition
        motion:constraintSetStart="@+id/end"
        motion:constraintSetEnd="@+id/show_tails" />
</MotionScene>